<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="take_note" resource="default" engine="innodb" comment="Take Note">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="varchar" name="title" nullable="false" length="255"  comment="Title"/>
        <column xsi:type="varchar" name="description" nullable="false" length="255"  comment="Description"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated At"/>
        
        <column xsi:type="smallint" name="is_deleted" nullable="false" default="0" comment="0 active 1 cancel"/> 
        <column xsi:type="timestamp" name="deleted_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Deleted At"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
    </table>

</schema>